---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';

const title = 'Verify Email';
const description = 'Verify your email address';
---

<Layout title={title} description={description}>
  <Header client:only="react" />
  <div class="min-h-screen bg-white dark:bg-zinc-900">
    <main class="relative isolate px-6 py-24 sm:py-32 lg:px-8">
      <div class="mx-auto max-w-2xl">
        <div id="verification-container" class="text-center">
          <div class="mb-8">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-indigo-100 dark:bg-indigo-900/30 mb-4">
              <svg class="w-8 h-8 text-indigo-600 dark:text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h1 class="text-3xl font-bold tracking-tight text-zinc-900 sm:text-4xl dark:text-white">
              Verifying your email...
            </h1>
            <p class="mt-4 text-lg text-zinc-600 dark:text-zinc-400">
              Please wait while we verify your email address.
            </p>
          </div>

          <div class="mt-8">
            <div class="inline-block h-8 w-8 animate-spin rounded-full border-4 border-solid border-indigo-600 border-r-transparent dark:border-indigo-400"></div>
          </div>
        </div>
      </div>
    </main>

    <Footer />
  </div>

  <script>
    import { pb } from '../lib/pocketbase';

    async function verifyEmail() {
      const container = document.getElementById('verification-container');
      if (!container) return;

      // Get token from URL query parameters
      const urlParams = new URLSearchParams(window.location.search);
      const token = urlParams.get('token');

      if (!token) {
        container.innerHTML = `
          <div class="text-center">
            <div class="mb-8">
              <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-red-100 dark:bg-red-900/30 mb-4">
                <svg class="w-8 h-8 text-red-600 dark:text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </div>
              <h1 class="text-3xl font-bold tracking-tight text-zinc-900 sm:text-4xl dark:text-white">
                Invalid Verification Link
              </h1>
              <p class="mt-4 text-lg text-zinc-600 dark:text-zinc-400">
                The verification link is missing or invalid.
              </p>
            </div>
            <a href="/login" class="inline-flex items-center rounded-lg bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm transition-colors hover:bg-indigo-500">
              Go to Login
            </a>
          </div>
        `;
        return;
      }

      try {
        // Verify the email using the token
        await pb.collection('users').confirmVerification(token);

        // Success!
        container.innerHTML = `
          <div class="text-center">
            <div class="mb-8">
              <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-100 dark:bg-green-900/30 mb-4">
                <svg class="w-8 h-8 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <h1 class="text-3xl font-bold tracking-tight text-zinc-900 sm:text-4xl dark:text-white">
                Email Verified!
              </h1>
              <p class="mt-4 text-lg text-zinc-600 dark:text-zinc-400">
                Your email address has been successfully verified. You can now sign in to access all features.
              </p>
            </div>
            <div class="flex flex-col sm:flex-row gap-3 justify-center">
              <a href="/login" class="inline-flex items-center justify-center rounded-lg bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm transition-colors hover:bg-indigo-500">
                Sign In
              </a>
              <a href="/" class="inline-flex items-center justify-center rounded-lg border border-zinc-300 bg-white px-4 py-2.5 text-sm font-semibold text-zinc-900 shadow-sm transition-colors hover:bg-zinc-50 dark:border-zinc-700 dark:bg-zinc-900 dark:text-white dark:hover:bg-zinc-800">
                Go to Home
              </a>
            </div>
          </div>
        `;
      } catch (error) {
        console.error('Verification error:', error);

        container.innerHTML = `
          <div class="text-center">
            <div class="mb-8">
              <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-red-100 dark:bg-red-900/30 mb-4">
                <svg class="w-8 h-8 text-red-600 dark:text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
              </div>
              <h1 class="text-3xl font-bold tracking-tight text-zinc-900 sm:text-4xl dark:text-white">
                Verification Failed
              </h1>
              <p class="mt-4 text-lg text-zinc-600 dark:text-zinc-400">
                ${error instanceof Error ? error.message : 'The verification link may have expired or is invalid. Please try requesting a new verification email.'}
              </p>
            </div>
            <div class="flex flex-col sm:flex-row gap-3 justify-center">
              <a href="/login" class="inline-flex items-center justify-center rounded-lg bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm transition-colors hover:bg-indigo-500">
                Sign In
              </a>
              <a href="/register" class="inline-flex items-center justify-center rounded-lg border border-zinc-300 bg-white px-4 py-2.5 text-sm font-semibold text-zinc-900 shadow-sm transition-colors hover:bg-zinc-50 dark:border-zinc-700 dark:bg-zinc-900 dark:text-white dark:hover:bg-zinc-800">
                Register Again
              </a>
            </div>
          </div>
        `;
      }
    }

    // Run verification when page loads
    verifyEmail();
  </script>
</Layout>
